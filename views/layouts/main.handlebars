<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>美食清單</title>
</head>

<body>

  <header>
    <!-- navigation -->
    <nav class="navbar navbar-light bg-light">
      <div class="container justify-content-between">
        <a class="navbar-brand" href="/">
          <img src="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/6227/restaurant-list-logo.png"
            width="30" height="30" class="d-inline-block align-top" alt="我的餐廳清單">
          {{#if isAuthenticated}}{{ user.name }}的{{/if}}美食清單
        </a>
        {{#if isAuthenticated}}
          <a href="/restaurants/new" class="btn btn-outline-success">創建新的餐廳</a>
          <a href="/users/logout" class="btn btn-outline-secondary">Logout</a>
        {{else}}
          <a href="/users/login" class="btn btn-outline-success">Login</a>
        {{/if}}
      </div>
    </nav>
    {{#if isAuthenticated}}
      <div class="banner"></div>
    {{/if}}
  </header>

  <!-- search bar -->
  {{#if isAuthenticated}}
    <div class="container search-bar sort-box d-flex justify-content-around align-items-center">
      <div class="search-bar-outer">
        <div class="search-bar-inner">
          <form action="/search">
            <h4 class="mb-2">尋找餐廳：</h4>
            <div class="input-group">
              <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類、地址" aria-label="Restaurant Name..."
                value="{{ keyword }}" aria-describedby="search-button">
              <div class="input-group-append">
                <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="dropdown show restaurantSort">
        <a class="btn btn-outline-primary btn-lg dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          排序方式
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <div class="dropdown-item" data-href="ASC">A - Z</div>
          <div class="dropdown-item" data-href="DESC">Z - A</div>
          <div class="dropdown-item" data-href="byType">類別</div>
          <div class="dropdown-item" data-href="byArea">地區</div>
        </div>
      </div>
    </div>
  {{/if}}
  
  <!-- main area -->
  {{{ body }}}

  <!-- resources CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js" integrity="sha512-+NqPlbbtM1QqiK8ZAo4Yrj2c4lNQoGv8P79DPtKzj++l5jnN39rHA/xsqn8zE9l0uSoxaCdrOgFs6yjyfbBxSg==" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha512-5WvZa4N7Jq3TVNCp4rjcBMlc6pT3lZ7gVxjtI6IkKW+uItSa+rFgtFljvZnCxQGj8SUX5DHraKE6Mn/4smK1Cg==" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha512-Ah5hWYPzDsVHf9i2EejFBFrG2ZAPmpu4ZJtW4MfSgpZacn+M9QHDt+Hd/wL1tEkk1UgbzqepJr6KnhZjFKB+0A==" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha512-tDXPcamuZsWWd6OsKFyH6nAqh/MjZ/5Yk88T5o+aMfygqNFPan1pLyPFAndRzmOWHKT+jSDzWpJv8krj6x1LMA==" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.8.1/css/all.min.css" integrity="sha512-gMjQeDaELJ0ryCI+FtItusU9MkAifCZcGq789FrzkiM49D8lbDhoaUaIX4ASU187wofMNlgBJ4ckbrXM9sE6Pg==" crossorigin="anonymous" />
  
  <!-- Project stylesheet -->
  <link rel="stylesheet" href="/css/style.css">
  <script src="/js/script.js"></script>
</body>

</html>