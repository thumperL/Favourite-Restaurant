<h1 class="mb-1 restaurant-show-title">{{ restaurants.name }}</h1>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mb-3 mx-auto">
      <a href="/restaurants/{{ restaurants._id }}/edit" class="btn btn-outline-primary pt-0 pb-0">
        <i class="fas fa-edit"></i> Edit 
      </a>
      <form action="/restaurants/{{ restaurants._id }}?_method=DELETE" method="POST" style="display: inline;">
        <button class="btn btn-outline-danger pt-0 pb-0" type="submit"><i class="far fa-trash-alt"></i> Delete </button>
      </form>
      <a class="btn btn-outline-secondary pt-0 pb-0" href="/">back</a>
    </div>
  </div>
</div>
<div class="container">
  <div class="row">
    <div class="col-12 col-md-10 mx-auto">

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-utensils pr-2"></i>
          類別：
        </span>
        {{ restaurants.category }}
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-map-marker-alt pr-2"></i>
          地址：
        </span>
        {{ restaurants.location }}
        <a href="{{ restaurants.google_map }}" class="text-secondary" target="_blank">
          <i class="fas fa-location-arrow pr-2 fa-xs"></i>
        </a>
      </p>

      <p class="mb-1">
        <span class="text-secondary">
          <i class="fas fa-mobile-alt pr-2"></i>
          電話：
        </span>
        {{ restaurants.phone }}
      </p>

      <p class="mb-5">
        {{ restaurants.description }}
      </p>

      <img class="rounded mx-auto d-block mb-4 w-100" src="{{ restaurants.image }}" alt="{{ restaurants.name }}" style="max-width: 600px;">
    </div>
  </div>
</div>